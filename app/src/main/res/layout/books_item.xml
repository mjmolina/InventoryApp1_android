<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_NT">

    <TextView
        android:id="@+id/book_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginStart="51dp"
        android:layout_marginTop="24dp"
        android:textSize="@dimen/TextSize_18sp"
        android:textStyle="bold"
        tools:text="Title"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="51dp" />


    <TextView
        android:id="@+id/quantity"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/book_Title"
        android:layout_gravity="center"
        android:layout_marginTop="66dp"
        android:textSize="@dimen/TextSize_13sp"
        android:text="Units"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/book_Title" />

    <TextView
        android:id="@+id/price"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/quantity"
        android:layout_gravity="center"
        android:layout_marginEnd="98dp"
        android:textSize="@dimen/TextSize_13sp"
        android:textStyle="bold"
        android:text="â‚¬"
        android:layout_alignParentRight="true"
        android:layout_marginRight="98dp" />

    <Button
        android:id="@+id/button_sale"
        android:background="@drawable/button_round"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/quantity"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="23dp"
        android:text="Sale"
        android:color="#FFFFFF"
        android:layout_alignParentRight="true"
        android:layout_marginRight="23dp" />




</RelativeLayout>