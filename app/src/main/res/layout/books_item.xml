<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_NT">

    <TextView
        android:id="@+id/book_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/Tv_marginL_BI"
        android:layout_marginStart="@dimen/Tv_marginS_BI"
        android:layout_marginTop="@dimen/Tv_marginT_BI"
        android:textSize="@dimen/TextSize_18sp"
        android:textStyle="bold"
        tools:text="@string/bookTitle" />

    <TextView
        android:id="@+id/quantity"
        android:layout_width="@dimen/Tv_widthBI"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/book_Title"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/book_Title"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/Tv2_marginT_BI"
        android:text="@string/units"
        android:textSize="@dimen/size_16sp"
        android:textStyle="bold"
        tools:text="999" />

    <TextView
        android:id="@+id/quantity2"
        android:layout_width="@dimen/Tv3_width_BI"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/quantity"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/Tv3_marginL_BI"
        android:layout_marginStart="@dimen/Tv3_marginStart_BI"
        android:layout_marginTop="@dimen/MarginTop"
        android:text="@string/units"
        android:textColor="@color/blue"
        android:textSize="@dimen/size_16sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/price"
        android:layout_width="@dimen/Tv4_width_BI"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/quantity2"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/Tv4_marginlS_BI"
        android:layout_marginStart="@dimen/Tv4_marginlS_BI"
        android:text="@string/Euros"
        android:textSize="@dimen/size_16sp"
        android:textStyle="bold"
        tools:text="999" />

    <TextView
        android:id="@+id/price2"
        android:layout_width="@dimen/Tv5_width_BI"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/quantity2"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/Tv4_marginER_BI"
        android:text="@string/Euros"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/size_16sp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/Tv4_marginER_BI" />

    <Button
        android:id="@+id/button_sale"
        android:layout_width="@dimen/B_width_BI"
        android:layout_height="@dimen/B_heigth_BI"
        android:layout_alignBottom="@+id/quantity2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/B_marginER_BI"
        android:layout_marginRight="@dimen/B_marginER_BI"
        android:background="@drawable/button_round"
        android:text="@string/sale" />

</RelativeLayout>